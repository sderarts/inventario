<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="/styles/style.css">
</head>
<body>
    <%- include('index.ejs') %>
    <br><center><h1>Proveedores</h1></center>
    <div class="container mt-3">
        <h2>Registrar un proveedor</h2>
        <form class="form-horizontal" action="/reg-prov" method="POST">
            <div class="form-group">
                <label for="name" class="control-label col-sm-2">Nombre</label>
                <input class="form-control" type="text" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="lname" class="control-label col-sm-2">Apellido</label>
                <input class="form-control" type="text" id="lname" name="lname" required>
            </div>
            <div class="form-group">
                <label for="empresa" class="control-label col-sm-2">Empresa</label>
                <input class="form-control" type="text" id="empresa" name="empresa" required>
            </div>
            <div class="form-group">
                <label for="email" class="control-label col-sm-2">Correo</label>
                <input class="form-control" type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="pago" class="control-label col-sm-2">Método pago</label>
                <select  class="form-control form-control-sm" name="pago" id="pago">
                    <option value=1>Transferencia</option>
                    <option value=2>Débito</option>
                    <option value=3>Crédito</option>
                </select>
            </div>
            <div class="form-group">
                <label for="dir" class="control-label col-sm-2">Dirección</label>
                <input class="form-control" type="text" id="dir" name="dir" required>
            </div>
            <div class="form-group">
                <label for="tel" class="control-label col-sm-2">Télefono</label>
                <input class="form-control" type="number" id="tel" name="tel" required>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Registrar</button>
                </div>
            </div>
        </form>

    </div>
            
    

    <br>

    <center><h3>Proveedores</h3></center>
    <center>
        <table>
        <table border="1">
        <tr>
            <th>id</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Empresa</th>
            <th>Correo</th>
            <th>Terminos de pago</th>
            <th>Dirección</th>
            <th>Telefono</th>
        </tr>
        <% proveedor.forEach(function(proveedor) { %>
            <tr>
                <td><%= proveedor.id_prov %></td>
                <td><%= proveedor.nombre_prov %></td>
                <td><%= proveedor.apellido_prov %></td>
                <td><%= proveedor.empresa_prov %></td>
                <td><%= proveedor.correo_prov %></td>
                <td><%= proveedor.terminos_pago %></td>
                <td><%= proveedor.dir_prov %></td>
                <td><%= proveedor.telefono_prov %></td>
            </tr>
        <% }); %>
    </center><br><br>
    
    </body>
</html>