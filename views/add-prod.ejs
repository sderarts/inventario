<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="">
    <script src="node_modules/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<html>
<body>
    <%- include('index.ejs') %>
    <div class="container mt-3">
        <h1>Registrar producto</h1>
        <form action="/buy-prod" method="POST">
            <div class="mb-3 mt-3">
                <label for="name">Nombre producto</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="">
            </div>
            <div class="mb-3 mt-3">
                <label for="info">Descripción producto</label>
                <input type="text" class="form-control" id="info" name="info">
            </div>
            <div class="mb-3 mt-3">
                <label for="stock">Cantidad</label>
                <input type="number" class="form-control" id="stock" name="stock">
            </div>
            <div class="mb-3 mt-3">
                <label for="ubi">Ubicación producto</label>
                <input type="text" class="form-control" id="ubi" name="ubi">
            </div>
            <div class="mb-3 mt-3">
                <label for="date">Fecha de vencimiento</label>
                <input type="date" class="form-control" id="date" name="date">
            </div>
            <div class="mb-3 mt-3">
                <label for="cat_pro">Categoria de producto</label>
                <select class="form-control form-control-sm" name="cat_pro" id="cat_pro">
                    <% cat.forEach(function(cat) { %>
                        <option value=<%=cat.id_cat %>><%= cat.nombre_categoria %>
                        </option>
                        <% }); %>
                </select>
            </div>
            <div class="mb-3 mt-3">
                <label for="prov">Proveedor</label>
                <select class="form-control form-control-sm" name="prov" id="prov">
                    <% prov.forEach(function(prov) { %>
                        <option value=<%=prov.id_prov %>><%= prov.nombre_prov + " " + prov.apellido_prov + ",  " +
                                prov.empresa_prov %>
                        </option>
                        <% }); %>
                </select>
            </div>
            <div class="mb-3 mt-3">
                <label for="precio">Precio producto</label>
                <input type="number" class="form-control" id="precio" name="precio">
            </div>
            <button type="submit" class="btn btn-primary">Crear producto</button>
            </form>
            
        </div><br>
    

    <!-- Agregar categoria -->
    
    <div class="container mt-3">
        <h2>Crea una categoria</h2>
        <form action="/add-ctg" method="POST">
            <div class="mb-3 mt-3">
                <!-- <label for="ctg">Categoría</label> -->
                <input type="text" class="form-control"  name="ctg" id="ctg">
            </div>
            <button type="submit" class="btn btn-primary">Crear categoría</button>
        </form>
    </div>
    <a href="/">Index</a>
</body>

</html>